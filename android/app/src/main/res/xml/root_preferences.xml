<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Connection">
        <EditTextPreference
            app:key="server_port"
            app:title="Server Port"
            app:summary="Default: 6000"
            app:defaultValue="6000" /> <!-- Removed inputType -->
    </PreferenceCategory>

    <PreferenceCategory app:title="Audio Quality">
        <ListPreference
            app:key="sample_rate"
            app:title="Sample Rate"
            app:summary="%s Hz"
            app:defaultValue="48000"
            app:entries="@array/sample_rates_labels"
            app:entryValues="@array/sample_rates_values" />
    </PreferenceCategory>

    <PreferenceCategory app:title="Noise Processing">
        <SwitchPreferenceCompat
            app:key="enable_hw_suppressor"
            app:title="Hardware Noise Suppression"
            app:summary="Uses Samsung built-in suppressor"
            app:defaultValue="true" />

        <SeekBarPreference
            app:key="noise_gate_threshold"
            app:title="Software Noise Gate Threshold"
            app:defaultValue="100"
            app:min="0"
            android:max="300"
            app:showSeekBarValue="true" /> <!-- Changed to android:max -->
    </PreferenceCategory>

</PreferenceScreen>
